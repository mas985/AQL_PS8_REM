<maui:MauiWinUIApplication
    x:Class="AQL_PS8_REM.WinUI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:maui="using:Microsoft.Maui"
    xmlns:local="using:AQL_PS8_REM.WinUI">
    
    <maui:MauiWinUIApplication.Resources>

        <DataTemplate x:Key="MauiAppTitleBarTemplate">

            <Grid >
                <Border

                  Canvas.ZIndex="1"

                  VerticalAlignment="Stretch"
                    
                  Margin="0,0,0,0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,0" x:Name="RootStackPanel">
                        <Image 
                        Margin="8,0,0,0"
                        x:Name="TitleBarIcon"
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Center"
                        Source="appiconLogo.png"
                        Visibility="Visible"
                        Width="16" 
                        Height="16"/>
                        <TextBlock 
                        Margin="8,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Text="AQL-PS-8 Remote Emulator"
                        FontWeight="Bold"/>
                    </StackPanel>
                </Border>
            </Grid>
        </DataTemplate>
    </maui:MauiWinUIApplication.Resources>

</maui:MauiWinUIApplication>
